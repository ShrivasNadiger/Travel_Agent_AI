{
  "name": "tourism-multi-agent-system",
  "version": "1.0.0",
  "description": "Root script to run both Backend and Frontend",
  "scripts": {
    "install:all": "npm install && cd tourism-frontend-only && npm install",
    "start:server": "node server.js",
    "start:client": "cd tourism-frontend-only && npm run dev",
    "dev": "concurrently \"npm run start:server\" \"npm run start:client\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "type": "module"
}